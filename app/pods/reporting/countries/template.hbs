<h2 class="t4 t-light mb-3 mx-3">{{t 'pods.reporting.countriesTitle' count=model.meta.countries.length}}</h2>

<table class="statsTable">
  <thead>
    <th class="statsTable-user">{{t 'pods.reporting.columns.name'}}</th>
    <th class="t-right statsTable-cell">{{status-label 'new'}}</th>
    <th class="t-right statsTable-cell">{{status-label 'in-progress'}}</th>
    <th class="t-right statsTable-cell">{{status-label 'pending'}}</th>
    <th class="t-right statsTable-cell">{{t 'pods.reporting.columns.pastDeadline'}}</th>
    <th class="t-right statsTable-cell">{{status-label 'closed'}}</th>
    <th class="t-right statsTable-cell">{{status-label 'cancelled'}}</th>
  </thead>
  <tbody>
    {{#if countriesTaskGroup.isRunning}}
      <tr><td class="statsTable-spinner" colspan="7">{{ui-spinner}}</td></tr>
    {{/if}}
    {{#each model.meta.countries as |country|}}
      {{stats-countries country=country group=countriesTaskGroup}}
    {{/each}}
  </tbody>
</table>
