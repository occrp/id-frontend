<div class="userList-controls {{if isExpanded 'is-expanded'}}">
  <button class="iconButton iconButton--dimmed" {{action (toggle "isExpanded" this)}}>
    <i class="fa fa-times" />
  </button>
  <button class="button button--micro button--primary" tabindex="{{unless isExpanded -1}}" {{action onRemove}}>Remove</button>
</div>
<div class="userList-content">
  {{yield}}
</div>