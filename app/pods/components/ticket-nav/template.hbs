<div class="ticketNav">
  <div class="ticketNav-action">
    {{#link-to "new" class="b link ttu white bg-occrp-red br2 b--occrp-red pointer dim ph3 pv2"}}
      {{~t 'pods.browse.newButton'~}}
    {{/link-to}}
  </div>
  <div class="ticketNav-search">
    <input type="text" class="db w-100 ba br1 pa2 b--moon-gray bg-white" oninput={{perform searchTickets value="target.value" }} placeholder={{t 'ticket.search.placeholder'}} value={{search}} data-test-ticket-search />
    {{#if search}}
    <button class="button button--link" {{action resetFilter 'search'}}>
      {{t 'ticket.search.clear'}}
    </button>
    {{/if}}
  </div>

</div>
