{{#ui-dropdown as |dd|}}
  {{#dd.trigger}}
    {{yield}}
  {{/dd.trigger}}
  {{#dd.body class="dd--sm" attachment="top center" targetAttachment="bottom center"}}
    <div class="userCard">
      <h5 class="userCard-title mb-2">{{user.displayName}}</h5>
      <p class="userCard-email mb-2">{{user.email}}</p>
      <p class="mb-1">
        {{#link-to 'browse' (query-params requester=user.id page=1)~}}
          {{icon "issue-opened"}}{{t 'userCard.viewRequests'}}
        {{~/link-to}}
      </p>
      {{#if (can 'manage tickets')}}
      <p>
        <a href="/admin/accounts/profile/{{user.id}}" target="_blank">
          {{icon "settings"}}{{t 'userCard.adminProfile'}}
        </a>
      </p>
      {{/if}}
    </div>
  {{/dd.body}}
{{/ui-dropdown}}