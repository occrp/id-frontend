{{#if hasFilters}}
  <div class="activeFilters">
    <span class="activeFilters-label">
      {{t 'filters.current.title'}}
    </span>
    {{#if kind}}
      <span class="chip">
        <span class="chip-label">{{t 'ticket.kind' count=1}}</span>
        <span class="chip-value" data-test-active-filter="kind">{{t (concat 'ticket.kind.' kind '.shortName')}}</span>
      </span>
    {{/if}}
    {{#if country}}
      <span class="chip">
        <span class="chip-label">{{t 'ticket.country' count=1}}</span>
        <span class="chip-value" data-test-active-filter="country" title="{{country-name country}}">{{country}}</span>
      </span>
    {{/if}}
    {{#if currentRequester}}
      <span class="chip">
        <span class="chip-label">{{t 'ticket.requester' count=1}}</span>
        <span class="chip-value" data-test-active-filter="requester">{{currentRequester.displayName}}</span>
      </span>
    {{/if}}
    {{#if currentResponder}}
      <span class="chip">
        <span class="chip-label">{{t 'ticket.responder' count=1}}</span>
        <span class="chip-value" data-test-active-filter="responder">{{currentResponder.displayName}}</span>
      </span>
    {{/if}}
    <a href class="activeFilters-clear" {{action resetFilters}}>
      {{t 'filters.current.clear'}}
    </a>
  </div>
{{/if}}