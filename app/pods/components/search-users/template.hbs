<div class="searchBox">
  <input type="text" class="form-control" oninput={{perform task value="target.value" }} placeholder={{t 'profile.search.placeholder'}} autocomplete="off" data-test-filter-search />
</div>

{{yield}}

{{#if task.isRunning}}
  {{ui-spinner}}
{{else}}

  {{#if task.lastSuccessful.value.length}}
    <div class="list">
      {{#each task.lastSuccessful.value as |user|}}
        <a href class="list-item {{if (contains user.id current) "is-active"}}" {{action onSelect user}} data-test-filter-option={{user.id}}>{{user.firstName}} {{user.lastName}}</a>
      {{/each}}
    </div>
  {{else if task.lastSuccessful}}
    <div class="noResults">{{t 'profile.search.noResults'}}</div>
  {{/if}}
{{/if}}
