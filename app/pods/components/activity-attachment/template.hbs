<div class="activity-headline">
  {{icon "file"}}
  <div>
    <strong>{{user-avatar user=data.user}} {{data.user.displayName}}</strong>
    {{t 'activity.attachment.action'}}
    <time datetime={{data.createdAt}} title={{moment-format data.createdAt 'LLL'}}>
      {{moment-from-now data.createdAt}}
    </time>
  </div>
</div>