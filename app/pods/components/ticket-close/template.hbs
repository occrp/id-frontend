<a class="button button--bordered" {{action (mut isShowingModal) true}} data-test-cancel>
  {{t 'pods.view.close.button' verb=activityType}}
</a>

{{#if isShowingModal}}
{{#ui-modal onClose=(action (mut isShowingModal) false)}}
  <div class="modal-content">
  <div class="modal-body">

    <div class="modal-message">
      <h4>{{t 'pods.view.close.title' verb=activityType}}</h4>
    </div>
    <div class="modal-actions modal-actions--center">
      <button class="button button--primary" {{action 'save'}} data-test-modal-confirmCancel>
        {{t 'pods.view.close.confirm' verb=activityType}}
      </button>
      <button class="button button--accent" {{action (mut isShowingModal) false}} data-test-modal-dontCancel>
        {{t 'pods.view.close.cancel'}}
      </button>
    </div>

  </div>
  </div>
{{/ui-modal}}
{{/if}}